<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#DCEDC8"
                android:centerColor="#63F0AC"
                android:endColor="#63F0AC"
                android:angle="360" />
            <corners
                android:radius="34dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <!-- pressed -->


    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#63F0AC"
                android:centerColor="#63F0AC"
                android:endColor="#63F0AC"
                android:angle="360" />
            <corners
                android:radius="34dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <!-- focused -->


    <item>
        <shape>
            <gradient
                android:startColor="#DCEDC8"
                android:centerColor="#63F0AC"
                android:endColor="#63F0AC"
                android:angle="360" />
            <corners
                android:radius="34dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <!-- default -->
</selector>