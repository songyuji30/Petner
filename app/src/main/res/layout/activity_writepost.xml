<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <android.widget.Button
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignBaseline="@+id/post"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_backicon" />

            <TextView
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="POSTING"
                android:textColor="#3E3E3E"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_upload"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/post"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:background="#EEEEEE"
                android:gravity="center_vertical|end"
                android:text="등록"
                android:textColor="#3E3E3E" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_post"
            android:orientation="vertical"
            android:padding="12dp">

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#D4D4D4"
                android:ems="10"
                android:hint="제목"
                android:padding="10dp"
                android:textColor="#B4B4B4"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/text_back"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/comeimage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@android:drawable/picture_frame" />

                <android.widget.Button
                    android:id="@+id/btn_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="#00FFFFFF"
                    android:text="눌러서 이미지를 불러와주세요"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="top"
                android:hint="글을 작성해주세요."
                android:lines="10"
                android:padding="10dp" />


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone">


        <LinearLayout
            android:id="@+id/pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <android.widget.Button
                android:id="@+id/btn_pic"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/post_pic"
                android:drawableLeft="@drawable/ic_post_camera"
                android:drawablePadding="-15dp"
                android:paddingStart="20dp"
                android:text="촬영" />


            <android.widget.Button
                android:id="@+id/btn_picGal"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/post_pic"
                android:drawableLeft="@drawable/ic_post_album"
                android:drawablePadding="-15dp"
                android:paddingStart="20dp"
                android:text="갤러리" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/pic"
            android:background="@drawable/post_pic"
            android:elevation="30dp">

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>